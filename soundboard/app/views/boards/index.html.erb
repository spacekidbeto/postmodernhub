<h1>Listing SoundBoard</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Transcript</th>
      <th>Length</th>
      <th>Audiofile</th>
      <th>Recording date</th>
      <th>No. of Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.title %></td>
        <td><%= board.transcript %></td>
        <td><%= board.length %></td>
        <td><%= board.audiofile %></td>
        <td><%= board.recording_date %></td>
        <td><%= board.comments.length %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

